{% extends '::base.html.twig' %}

{% block content %}
  <div class="row">
    <div class="col-sm-6">
      <div class="profile-box"> <!-- PROFILE BOX -->

        <div class="profile-heading row"> <!-- PROFILE HEADING -->
          <div class="profile-picture col-sm-2">
            <img src="{{ asset('bundles/picoassets/images/tux.gif') }}" alt="profile_picture">
          </div>
          <div class="profile-title col-sm-10">
            <p>USer</p>
          </div>
        </div> <!-- END PROFILE HEADING -->

        <div class="profile-edit"> <!-- PROFILE CONTENT -->
          {{ form_start(form, {"attr": { "class": "form-horizontal" }}) }}
            {{ form_errors(form) }}

            <div class="form-group"> <!-- last_name -->
              {{ form_errors(form.last_name) }}
              {{ form_label(form.last_name, "Nom : ", {"label_attr": {"class": "control-label col-sm-3"}}) }}
              <div class="col-sm-9">
                {{ form_widget(form.last_name, {"attr": {"class": "form-control"}}) }}
              </div>
            </div>

            <div class="form-group"> <!-- first name -->
              {{ form_errors(form.first_name) }}
              {{ form_label(form.first_name, "Prénom : ", {"label_attr": {"class": "control-label col-sm-3"}}) }}
              <div class="col-sm-9">
                {{ form_widget(form.first_name, {"attr": {"class": "form-control"}}) }}
              </div>
            </div>

            <div class="form-group"> <!-- email -->
              {{ form_errors(form.email) }}
              {{ form_label(form.email, "Email : ", {"label_attr": {"class": "control-label col-sm-3"}}) }}
              <div class="col-sm-9">
                {{ form_widget(form.email, {"attr": {"class": "form-control"}}) }}
              </div>
            </div>

            <div class="form-group"> <!-- phone -->
              {{ form_errors(form.phone) }}
              {{ form_label(form.phone, "Téléphone : ", {"label_attr": {"class": "control-label col-sm-3"}}) }}
              <div class="col-sm-9">
                {{ form_widget(form.phone, {"attr": {"class": "form-control"}}) }}
              </div>
            </div>

            {{ form_widget(form._token) }}

            <div class="col-sm-6 col-sm-offset-3">
              <button class="btn btn-primary form-control" type="submit" value="{{ 'registration.submit'|trans }}">
                VALIDER !
              </button>
            </div>

            <div class="clearfix"></div>

            {{ form_end(form) }}

        </div> <!-- END PROFILE CONTENT -->
      </div> <!-- END PROFILE BOX -->
    </div>
  </div>
{% endblock content %}