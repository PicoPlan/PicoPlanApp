<link rel="stylesheet" href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}" />
<script type="text/javascript" src="{{ asset('bundles/adesignscalendar/js/jquery/jquery-1.8.2.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/adesignscalendar/js/fullcalendar/jquery.fullcalendar.min.js') }}"></script>
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
<script type="text/javascript" src="{{ asset('bundles/adesignscalendar/js/calendar-settings.js') }}"></script>
<div id='calendar'>
	{% include 'ADesignsCalendarBundle::calendar.html.twig' %}
</div>
<script type="text/javascript">
		$('#calendar').fullCalendar({
			defaultDate: '2015-01-01',
			eventLimit: true,
			defaultView: 'agendaWeek',
			allDaySlot: false,
			events: [
			{% for events in eventlist %}

            	{
            		title: '{{ events.title }}',
            		start: '{{ events.datetimeStart|date("Y-m-d")}}T{{ events.datetimeStart|date("H:i:s")}}',
            		end: '{{ events.datetimeEnd|date("Y-m-d")}}T{{ events.datetimeEnd|date("H:i:s")}}',
            		allDay: false,
            		//ROUTE
            		url: "javascript:eventClickOverride('{{type}}','{{ events.id }}')",
            	},

            {% endfor %}
            {}
			]
		});
</script>