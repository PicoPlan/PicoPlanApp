<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
    {% stylesheets 'bundles/picoassets/css/*' filter="cssrewrite" %}
      <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
      <link rel="stylesheet" href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}" />
    </head>
    <body>
      <div class="container-fluid">
        <header>
          <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
              <div class="navbar-header">
                <a class="navbar-brand" href="#">
                  {% if title is defined %}
                    {{ title }}
                {% else %}
                  PicoPlan
                  {% endif %}</a>
              </div>
              <ul class="nav navbar-nav">
                <li class="active"><a href="#">headerlink</a></li>
              </ul>
              <ul class="nav navbar-nav pull-right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                  <li>
                    <a href="{{ path('user_show') }}">{{ app.user.username }}</a>
                  </li>
                  <li>
                    <a href="{{ path('fos_user_security_logout') }}">
                      <span class="glyphicon glyphicon-off"></span>
                    </a>
                  </li>
                {% else %}
                  <li>
                    <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                  </li>
                {% endif %}
                </li>
              </ul>
            </nav>
        </header>
      </div>
      <div class="container-fluid"> <!-- CONTAINER -->
        <div class="row"> <!-- Main row -->
          <div class="col-sm-2" id="sidebar"> <!-- Sidebar -->
            <ul class="nav nav-pills nav-stacked">
              <li>
                <form role="form" action="{{ url('user_find') }}" method="GET">
                  <div class="input-group">
                    <input type="text" name="username" id="username" class="form-control" placeholder="Va chercher !">
                    <span class="input-group-btn">
                      <button type="submit" class="btn btn-default">Go !</button>
                    </span>
                  </div>
                </form>
              </li>
              <li role="presentation" class="active">
                <a href="/">
                  <span class="glyphicon glyphicon-home"></span>
                  Accueil
                </a>
              </li>
              {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
              <li role="presentation">
                <a href="{{ path('user_show') }}">
                  <span class="glyphicon glyphicon-user"></span>
                  Ma page
                </a>
              </li>
              {% endif %}
              <li role="presentation">
                <a href="{{url('pico_league_affichage')}}">
                  <span class="glyphicon glyphicon-list"></span>
                  Ligues
                </a>
              </li>
              <li role="presentation">
                <a href="#">
                  <span class="glyphicon glyphicon-calendar"></span>
                  Calendriers
                </a>
              </li>
              <li role="presentation">
                <a href="#">
                  <span class="glyphicon glyphicon-info-sign"></span>
                  Infos
                </a>
              </li>
              {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% if app.user.permission < 2 %}
                <li role="presentation">
                  <a href="{{ url('pico_league_create_sport') }}">
                    <span class="glyphicon glyphicon-cog"></span>
                    Création de sport
                  </a>
                </li>
                <li role="presentation">
                  <a href="{{ url('pico_league_create_league') }}">
                    <span class="glyphicon glyphicon-cog"></span>
                    Création de ligue
                  </a>
                </li>
                {% endif %}
              {% endif %}
            </ul>
          </div> <!-- End sidebar -->
          <div class="col-sm-10" id="content"> <!-- Block content -->
            <div id='body'>
              {% if (alert_info is defined) and (alert_info != false) %}
                <div id="alert-info" class="alert alert-{{ alert_class }}">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p>
                      {{ alert_info}}
                    </p>
                </div>
              {% endif %}
              {% block content %}{% endblock %}
            </div>
          </div> <!-- End block content -->
        </div> <!-- End main row -->
        
      </div> <!-- End CONTAINER -->
      <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script> <!-- FOSRoutingJsBundle -->
      <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
      <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
      <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
      {% javascripts
        '@PicoAssetsBundle/Resources/public/javascripts/*'
        '@PicoAssetsBundle/Resources/public/javascripts/library/*'
        '@PicoAssetsBundle/Resources/public/javascripts/bootstrap/**' %}
        <script src="{{ asset_url }}"></script>
      {% endjavascripts %}
      {% block extrascript %}{% endblock extrascript %}
    </body>
</html>
