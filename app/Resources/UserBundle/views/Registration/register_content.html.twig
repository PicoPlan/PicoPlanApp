{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal col-sm-6">
  <div class="form-group">
      {{ form_errors(form) }}
  </div>
  <div class="form-group">
      {{ form_label(form.last_name, "Votre nom", {"label_attr": {"class": "col-sm-3 control-label"}})}}
      {{ form_errors(form.last_name) }}
      <div class="col-sm-9">
        {{ form_widget(form.last_name, {"attr": {"class": "form-control"}}) }}
      </div>
  </div>
  <div class="form-group">
      {{ form_label(form.first_name, "Votre prénom", {"label_attr": {"class": "col-sm-3 control-label"}})}}
      {{ form_errors(form.first_name) }}
      <div class="col-sm-9">
        {{ form_widget(form.first_name, {"attr": {"class": "form-control"}}) }}
      </div>
  </div>
  <div class="form-group">
      {{ form_label(form.phone, "Votre numéro de téléphone", {"label_attr": {"class": "col-sm-3 control-label"}})}}
      {{ form_errors(form.phone) }}
      <div class="col-sm-9">
        {{ form_widget(form.phone, {"attr": {"class": "form-control"}}) }}
      </div>
  </div>
  <div class="form-group">
      {{ form_label(form.email, "Votre email", {"label_attr": {"class": "col-sm-3 control-label"}})}}
      {{ form_errors(form.email) }}
      <div class="col-sm-9">
        {{ form_widget(form.email, {"attr": {"class": "form-control"}}) }}
      </div>
  </div>
  <div class="col-sm-6 col-sm-offset-3">
      <button class="btn btn-primary form-control" type="submit" value="{{ 'registration.submit'|trans }}">
        VALIDER !
      </button>
  </div>
  <div class="clearfix"></div>
</form>